
    <div class="container mt-5">
        <div hidden="@registerMode" class="text-center">
            <h1>Find your match</h1>
            <p class="lead">
                Come on in to view your matches... All you need to do is sign up!
            </p>
            <div class="text-center">
                <button class="btn btn-primary btn-lg mr-2" onclick="@RegisterToggle">Register</button>
                <button class="btn btn-info btn-lg">Learn More</button>
            </div>
        </div>

        @if (registerMode)
        {
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-4">
                        <app_register HideRegistrationForm="@CancelRegisterMode"></app_register>
                    </div>
                </div>
            </div>
        }
    </div>

@functions{

    protected bool registerMode = false;

    void RegisterToggle() => registerMode = true;

    void CancelRegisterMode(bool mode)
    {
        registerMode = mode;
        StateHasChanged();
    }
}